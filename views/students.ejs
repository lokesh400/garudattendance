<!DOCTYPE html>
<html>
<head>
    <title>All Students</title>
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background: #f8f9fa;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 1000px;
            margin: 40px auto;
            background: #fff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            border-radius: 10px;
            padding: 32px 24px 24px 24px;
        }
        .searchbar {
            position: sticky;
            top: 0;
            background: #fff;
            z-index: 10;
            padding-bottom: 16px;
        }
        .searchbar input {
            width: 100%;
            padding: 10px 16px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 6px;
            margin-bottom: 8px;
        }
        h2 {
            text-align: center;
            margin-bottom: 24px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 8px;
        }
        th, td {
            border: 1px solid #e0e0e0;
            padding: 12px 8px;
            text-align: center;
        }
        th {
            background: #007bff;
            color: #fff;
            font-weight: 500;
        }
        tr:nth-child(even) { background: #f4f8fc; }
        .student-photo {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 50%;
            border: 2px solid #007bff;
            background: #eee;
        }
        button {
            padding: 8px 18px;
            background: #28a745;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            transition: background 0.2s;
        }
        button:hover {
            background: #218838;
        }
    </style>
    <script>
        function filterStudents() {
            const query = document.getElementById('studentSearch').value.toLowerCase();
            const rows = document.querySelectorAll('.student-row');
            rows.forEach(row => {
                const text = row.innerText.toLowerCase();
                row.style.display = text.includes(query) ? '' : 'none';
            });
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="searchbar">
            <input type="text" id="studentSearch" placeholder="Search students by name, roll number, or father's name..." onkeyup="filterStudents()" />
        </div>
        <h2>All Students</h2>
        <table>
            <thead>
                <tr>
                    <th>Photo</th>
                    <th>Name</th>
                    <th>Roll Number</th>
                    <th>Father's Name</th>
                    <th>Register</th>
                </tr>
            </thead>
            <tbody>
                <% if (students && students.length) { %>
                    <% students.forEach(function(student) { %>
                        <tr class="student-row">
                            <td>
                                <% if (student.photo) { %>
                                    <img src="<%= student.photo %>" alt="Photo" class="student-photo" />
                                <% } else { %>
                                    <img src="/images/default-avatar.png" alt="No Photo" class="student-photo" />
                                <% } %>
                            </td>
                            <td><%= student.name %></td>
                            <td><%= student.rollNumber %></td>
                            <td><%= student.fatherName %></td>
                            <td>
                                <form action="/student/register" method="post">
                                    <input type="hidden" name="studentId" value="<%= student._id %>" />
                                    <input type="hidden" name="name" value="<%= student.name %>" />
                                    <input type="hidden" name="rollNumber" value="<%= student.rollNumber %>" />
                                    <button type="submit">Register</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr><td colspan="5">No students found.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
