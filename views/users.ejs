<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users - Face Attendance</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 900px;
            margin: 20px auto;
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        h1 {
            text-align: center;
            color: #667eea;
            margin-bottom: 30px;
        }

        .header-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            flex-wrap: wrap;
            gap: 10px;
        }

        .back-btn {
            display: inline-block;
            padding: 10px 20px;
            background: #f0f0f0;
            color: #333;
            text-decoration: none;
            border-radius: 8px;
            font-size: 0.9em;
        }

        .back-btn:hover {
            background: #e0e0e0;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .user-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 15px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border-radius: 20px;
            font-size: 0.9em;
            font-weight: 600;
        }

        .logout-btn {
            padding: 8px 15px;
            background: #ef4444;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-size: 0.9em;
            transition: background 0.3s;
        }

        .logout-btn:hover {
            background: #dc2626;
        }

        .summary {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
            text-align: center;
        }

        .summary h3 {
            color: #667eea;
            margin-bottom: 10px;
        }

        .summary p {
            font-size: 2em;
            color: #333;
            font-weight: bold;
        }

        .table-container {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        thead {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.9em;
        }

        tbody tr:hover {
            background: #f8f9fa;
        }

        .no-records {
            text-align: center;
            padding: 40px;
            color: #666;
            font-size: 1.1em;
        }

        .delete-btn {
            padding: 8px 15px;
            background: #dc3545;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 0.9em;
        }

        .delete-btn:hover {
            background: #c82333;
        }

        .actions {
            display: flex;
            gap: 5px;
        }

        @media (max-width: 600px) {
            .container {
                padding: 20px;
            }

            table {
                font-size: 0.9em;
            }

            th, td {
                padding: 10px 5px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header-bar">
            <a href="/" class="back-btn">‚Üê Back to Home</a>
            <div class="user-info">
                <div class="user-badge">
                    üë§ <%= user.username %> (<%= user.role %>)
                </div>
                <a href="/logout" class="logout-btn">Logout</a>
            </div>
        </div>
        
        <h1>Registered Employees</h1>

        <div class="summary">
            <h3>Total Employees</h3>
            <p><%= users.length %></p>
        </div>

        <div class="table-container">
            <% if (users.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Employee ID</th>
                            <th>Registration Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((employee, index) => { %>
                            <tr id="user-<%= employee._id %>">
                                <td><%= index + 1 %></td>
                                <td><%= employee.name %></td>
                                <td><%= employee.employee_id %></td>
                                <td><%= new Date(employee.created_at).toLocaleDateString() %></td>
                                <td>
                                    <div class="actions">
                                        <button class="delete-btn" onclick="deleteUser('<%= employee._id %>', '<%= employee.name %>')">Delete</button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <div class="no-records">
                    No employees registered yet. Register your first employee to get started.
                </div>
            <% } %>
        </div>
    </div>

    <script>
        async function deleteUser(userId, userName) {
            if (!confirm(`Are you sure you want to delete ${userName}?`)) {
                return;
            }

            try {
                const response = await fetch(`/api/users/${userId}`, {
                    method: 'DELETE'
                });

                const data = await response.json();

                if (response.ok) {
                    // Remove the row from the table
                    const row = document.getElementById(`user-${userId}`);
                    row.remove();
                    
                    alert('User deleted successfully');
                    
                    // Reload page to update count
                    location.reload();
                } else {
                    alert(data.error || 'Failed to delete user');
                }
            } catch (error) {
                console.error('Error deleting user:', error);
                alert('Error deleting user. Please try again.');
            }
        }
    </script>
</body>
</html>
